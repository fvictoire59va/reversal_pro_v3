# Reversal Detection Pro — Environment Variables
# Copy to .env and customize

# ── Database (REQUIRED — no defaults for security) ───────────
POSTGRES_USER=reversal
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
POSTGRES_DB=reversaldb
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@timescaledb:5432/${POSTGRES_DB}
DATABASE_URL_SYNC=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@timescaledb:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# Exchange (for live data fetching)
DEFAULT_EXCHANGE=binance
DEFAULT_SYMBOL=BTC/USDT
DEFAULT_TIMEFRAME=1h
DEFAULT_LIMIT=500

# Analysis defaults
DEFAULT_SENSITIVITY=Medium
DEFAULT_SIGNAL_MODE=Confirmed Only

# Auto-refresh scheduler
AUTO_REFRESH_ENABLED=true
AUTO_REFRESH_INTERVAL_MINUTES=5
AGENT_CYCLE_INTERVAL_MINUTES=5

# ── Hyperliquid API Credentials ──────────────────────────────
# Required only for LIVE trading mode (agents)
# Paper mode (simulation) works without these
# Get your API credentials from https://app.hyperliquid.xyz
HYPERLIQUID_WALLET_ADDRESS=
HYPERLIQUID_API_SECRET=
